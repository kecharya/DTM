@model PagedList.IPagedList < DischargeTransportManagement.Models.AppUserRoleModel>
@using PagedList.Mvc;

<script type="text/javascript" src="~/Scripts/appJavaScript.js"></script>

<div class="container">

    <div class="content-wrapper">
        <h3>Application Users</h3>
        @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="input-group col-lg-12">
                    <div class="col-lg-6">
                        @Html.TextBox("SearchUser", "", new { @class = "form-control mb", placeholder = "Search" })
                    </div>
                    <span class="input-append">
                        <button class="btn btn-primary" type="submit" value="Search">Go!</button>
                    </span>
                </div>
            </div>
        </div>
}

        <table class="table table-striped text-center" id="userTable">
            <tr>
                <th class="text-center">First Name</th>
                <th class="text-center">Last Name</th>
                <th class="text-center">VunetId</th>
                <th class="text-center">IsActive</th>
                <th class="text-center">Role</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.VunetId)</td>
                <td>@Html.DisplayFor(modelItem => item.IsUserActive)</td>
                <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                <td>
                    <button class="btn btn-default btn-xs" data-toggle="tooltip" title="Edit" onclick="location.href='@Url.Action("EditUser", "AppUserRole", item)'"><em class="fa fa-edit"></em></button>
                </td>
            </tr>
    }
        </table>

        <div class="row">
            <div class="text-center">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("DTMUsers", new { page }))
            </div>
        </div>

    </div>
</div>