@model DischargeTransportManagement.Models.AppUserRoleModel

<script type="text/javascript" src="~/Scripts/appJavaScript.js"></script>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="content-wrapper">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row pv-lg">
                        <div class="col-sm-12">
                            <div class="form-horizontal">
                                <p class="lead bb">User Information</p>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.Label("First Name", new { @class = "control-label col-md-1" })
                                        <div class="col-md-5">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        @Html.Label("Last Name", new { @class = "control-label col-md-1" })
                                        <div class="col-md-5">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.Label("VunetID", new { @class = "control-label col-md-1" })
                                        <div class="col-md-5">
                                            @Html.EditorFor(model => model.VunetId, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        @Html.Label("Role", new { @class = "control-label col-md-1" })
                                        <div class="col-md-5">
                                            @Html.DropDownList("UserRoles", Model.Roles, "Choose Role", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.Label("Active", new { @class = "control-label col-md-1" })
                                        <div class="col-md-5">
                                            @if (Model.IsUserActive)
                                            {
                                                <div class="checkbox">
                                                    <input type="checkbox" id="toggle-two" name="checkResp" value="false" checked data-onstyle="success" data-offstyle="danger" data-size="mini">
                                                    <input value="false" name="checkResp" type="hidden" />
                                                </div>
                                            }
                                            else if (!Model.IsUserActive)
                                            {
                                                <div class="checkbox">
                                                    <input type="checkbox" id="toggle-two" name="checkResp" value="true" data-onstyle="success" data-offstyle="danger" data-size="mini">
                                                    <input value="true" name="checkResp" type="hidden" />
                                                </div>
                                            }
                                        </div>
                                        @Html.Label("Confirm Changes?", new { @class = "control-label col-md-1" })
                                        <div class="col-md-5">
                                            <input type="submit" value="Save" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
