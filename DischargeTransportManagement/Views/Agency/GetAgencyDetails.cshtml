@model DischargeTransportManagement.Models.AgencyModel

@{
    ViewBag.Title = "GetAgencyDetails";
}

<div class="container">
    <div class="content-wrapper">
        <div class="panel panel-default" id="contactPanel">
            <div class="panel-heading">
                <button class="btn btn-primary btn-xs pull-right" data-toggle="tooltip" title="Edit" onclick="location.href='@Url.Action("EditAgency", "Agency", new { @agencyId = Model.AgencyId })'"><em class="fa fa-edit"></em></button>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="pv-lg">
                            <h3 class="m0 text-bold">@Html.DisplayFor(model => model.AgencyName)</h3>
                        </div>
                    </div>

                    <div class="col-sm-12" id="contactDetails">
                        <p class="lead bb">Agency Information</p>
                        <form class="form-horizontal p-20">
                            <div class="form-group">
                                <div class="col-sm-4">Address</div>
                                <div class="col-sm-8">
                                    @*<strong>@Model.AddressLn1</strong>*@
                                    <strong>@Model.AddressLn1</strong>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.AddressLn2))
                            {
                                <div class="form-group">
                                    <div class="col-sm-4"></div>
                                    <div class="col-sm-8">
                                        <strong>@Model.AddressLn2</strong>
                                    </div>
                                </div>
                            }
                            <div class="form-group">
                                <div class="col-sm-4">City</div>
                                <div class="col-sm-8">
                                    <strong>@Model.City</strong>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4">County</div>
                                <div class="col-sm-8">
                                    <strong>@Model.County</strong>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4">State</div>
                                <div class="col-sm-8">
                                    <strong>@Model.StateCode</strong>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4">Zip</div>
                                <div class="col-sm-8">
                                    <strong>@Model.Zip</strong>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4">Phone Number</div>
                                <div class="col-sm-8">
                                    <strong>@Model.Phone</strong>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4">Type</div>
                                <div class="col-sm-8">
                                    <strong>@Model.AgencyType</strong>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4">LocalUse</div>
                                <div class="col-sm-8">
                                    <strong>@Model.LocalUse</strong>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="form-group">
                                    <div class="col-sm-4">Notes</div>
                                    <div class="col-sm-8">
                                        <strong>@Model.Notes</strong>
                                    </div>
                                </div>
                            }
                            @if (Model.BaseRate.HasValue)
                            {
                                <div class="form-group">
                                    <div class="col-sm-4">BaseRate</div>
                                    <div class="col-sm-8">
                                        <strong>@Html.DisplayFor(x => x.BaseRate)</strong>
                                    </div>
                                </div>
                            }
                            @if (Model.BaseRate.HasValue)
                            {
                                <div class="form-group">
                                    <div class="col-sm-4">MileageRate</div>
                                    <div class="col-sm-8">
                                        <strong>@Html.DisplayFor(x => x.MileageRate)</strong>
                                    </div>
                                </div>
                            }
                            <div class="form-group">
                                <div class="col-sm-4">TaxID</div>
                                <div class="col-sm-8">
                                    <strong>@Model.TaxId</strong>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
