@model DischargeTransportManagement.Models.AgencyModel

<script type="text/javascript" src="~/Scripts/appJavaScript.js"></script>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="content-wrapper">
            <div class="panel panel-default" id="editContactPanel">
                <div class="panel-body">
                    @*<p class="lead bb">Caller Information</p>*@
                    <div class="row pv-lg">
                        <div class="col-sm-12">
                            <div class="form-horizontal">
                                <p class="lead bb">Agency Information</p>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.AgencyId)

                                        @Html.Label("Agency Name", new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.AgencyName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AgencyName, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.Label("Agency Type", new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.AgencyType, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AgencyType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.Label("Address Line 1", new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.AddressLn1, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AddressLn1, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.Label("Phone Number", new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @*@Html.Label("Address Ln2", new { @class = "control-label col-md-2" })*@
                                        <div class="col-md-4 col-sm-offset-2">
                                            @Html.EditorFor(model => model.AddressLn2, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.Label("County", new { @class = "control-label col-md-2" })
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.County, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        @Html.Label("City", new { @class = "control-label col-md-1" })
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        @Html.Label("State", new { @class = "control-label col-md-1" })
                                        <div class="col-md-1">
                                            @Html.EditorFor(model => model.StateCode, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        @Html.Label("Zip", new { @class = "control-label col-md-1" })
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @*@Html.Label("Agency Type", new { @class = "control-label col-md-2"})
                                            <div class="col-md-4">
                                                @Html.EditorFor(model => model.AgencyType, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.AgencyType, "", new { @class = "text-danger" })
                                            </div>*@
                                        @*@Html.Label("Phone Number", new { @class = "control-label col-md-2"})
                                            <div class="col-md-4">
                                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                            </div>*@
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.Label("Base Rate", new { @class = "control-label col-md-2" })
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.BaseRate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.BaseRate, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.Label("Mileage Rate", new { @class = "control-label col-md-1", @id = "extendedMileageRate" })
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.MileageRate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.MileageRate, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.Label("TaxID", new { @class = "control-label col-md-1" })
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.TaxId, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TaxId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">

                                        @Html.Label("LocalUse", new { @class = "control-label col-md-2" })
                                        <div class="col-md-5">
                                                @if (Model.LocalUse)
                                                {
                                                    <div class="checkbox">
                                                        <input type="checkbox" id="toggle-two" name="LocalUse" value="false" checked data-onstyle="success" data-offstyle="danger" data-size="mini">
                                                        <input value="false" name="checkResp" type="hidden" />
                                                    </div>
                                                }
                                                else if (!Model.LocalUse)
                                                {
                                                    <div class="checkbox">
                                                        <input type="checkbox" id="toggle-two" name="LocalUse" value="true" data-onstyle="success" data-offstyle="danger" data-size="mini">
                                                        <input value="true" name="checkResp" type="hidden" />
                                                    </div>
                                                }
                                            </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="pull-right" style="margin-right: 10px;">
                                <label style="color:red;" id="lblError"></label>
                                <input type="submit" value="Save" class="btn btn-success" />
                                @*onclick="$(this).closest('form').submit();"*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>